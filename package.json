{
  "name": "hardhat-project",
  "scripts": {
    "compile": "npx hardhat compile",
    "start:remix": "open https://remix.ethereum.org/#optimize=false&runs=200&evmVersion=null&version=soljson-v0.8.7+commit.e28d00a7.js && npx remixd -s . -u https://remix.ethereum.org",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "deploy:local": "yarn deploy --network localhost",
    "deploy:hardhat": "yarn deploy --network hardhat",
    "test": "npx hardhat test",
    "test:gas": "export REPORT_GAS=true && yarn test",
    "test:coverage": "npx hardhat coverage && open ./coverage/index.html",
    "eth-node": "npx hardhat node"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@remix-project/remixd": "^0.5.5",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.6.8",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@openzeppelin/contracts": "^4.4.0",
    "web3": "^1.6.1"
  }
}
